@using Microsoft.AspNetCore.Identity
@using Snackis.Areas.Identity.Data

@inject SignInManager<SnackisUser> SignInManager
@inject UserManager<SnackisUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <p></p>
                <a class="nav-link text-light" asp-area="" asp-page="/Admin/Index" title="Admin">Admin</a>
            </li>
        }
        <li class="nav-item">
            <p></p>
            <a id="manage" class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hej @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <p></p>
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0">Logga ut</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <p></p>
            <a class="nav-link text-light" id="register" asp-area="Identity" asp-page="/Account/Register">Skapa konto</a>
        </li>
        <li class="nav-item">
            <p></p>
            <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/Account/Login">Logga in</a>
        </li>
    }
</ul>
